{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/",
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "diagnostics": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./src/main/**.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}