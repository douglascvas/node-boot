{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}